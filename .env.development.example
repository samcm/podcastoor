# Development environment variables
# Copy this to .env.development and fill in your API keys

# API Keys (required for processing)
GEMINI_API_KEY=your_gemini_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# App settings
NODE_ENV=development
CONFIG_PATH=./config
CONFIG_FILE=config.dev.yaml

# Storage paths (local development - no Docker needed)
STORAGE_BASE_DIR=./storage
STORAGE_PUBLIC_URL=http://localhost:3000/files
DATABASE_PATH=./data/podcastoor.db
TEMP_DIR=./tmp

# Web frontend
VITE_API_URL=http://localhost:3000/api